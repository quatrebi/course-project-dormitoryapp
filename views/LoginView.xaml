<Window x:Class="DormitoryApp.Views.LoginView" Style="{StaticResource WindowStyle}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:interop="clr-namespace:Walterlv.Demo.Interop"
        xmlns:viewmodels="clr-namespace:DormitoryApp.ViewModels"
        xmlns:local="clr-namespace:DormitoryApp.Views"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        d:DataContext="{d:DesignInstance Type=viewmodels:LoginViewModel}"
        interop:WindowBlur.IsEnabled="True" 
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="{DynamicResource i18n-Auth}" Width="300" Height="500">
    <Window.Resources>
        <Style TargetType="{x:Type Border}" x:Key="PasswordBoxBorder" BasedOn="{StaticResource BorderStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="BorderBrush" Value="{x:Null}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type PasswordBox}">
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CaretBrush" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
        </Style>
    </Window.Resources>
    <Border BorderThickness="1" BorderBrush="#7FFFFFFF">
        <Grid Background="{StaticResource GlassBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Ellipse Margin="-85, -150" Height="300"  Grid.RowSpan="2" Fill="{StaticResource DefaultGradient}" VerticalAlignment="Top">
                <Ellipse.Effect>
                    <BlurEffect Radius="10"/>
                </Ellipse.Effect>
            </Ellipse>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Margin="0, 48, 0, 24" FontWeight="Thin" Style="{StaticResource Heading 1}" Text="{DynamicResource i18n-Title}"/>
                <Ellipse Width="80" Height="80" Stroke="{StaticResource PrimaryBrush}">
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="3" Direction="-90" Opacity="0.18" ShadowDepth="3"/>
                    </Ellipse.Effect>
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/resources/images/default-user.png" />
                    </Ellipse.Fill>
                </Ellipse>
            </StackPanel>
            <StackPanel Margin="32, 16, 32, 32" Grid.Row="1" VerticalAlignment="Center">

                <TextBlock Style="{DynamicResource Heading 3}" Margin="16, 8" Text="{DynamicResource i18n-Login}"/>
                <TextBox Style="{DynamicResource TextBoxStyle}" Text="{Binding LocalUser.Username, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Style="{DynamicResource Heading 3}" Margin="16, 24, 16, 8" Text="{DynamicResource i18n-Password}"/>
                <Border Style="{DynamicResource PasswordBoxBorder}" Padding="16, 8">
                    <PasswordBox x:Name="PasswordInput" PasswordChanged="PasswordInput_PasswordChanged"/>
                </Border>
            </StackPanel>
            <StackPanel Margin="32, 8, 32, 0" Grid.Row="2" HorizontalAlignment="Center">
                <Button Foreground="{DynamicResource SecondaryBrush}" FontSize="18" Style="{DynamicResource ButtonStyle}" Padding="32, 6" Content="{DynamicResource i18n-Enter}" IsDefault="True"
                        Background="{DynamicResource PrimaryBrush}" CommandParameter="{Binding LocalUser}" Command="{Binding AuthCommand}"/>
            </StackPanel>
            <TextBlock Margin="32" Grid.Row="2"  Style="{DynamicResource Heading 3}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="{Binding Status.Message}"/>
            <Grid x:Name="LoadingBox" Grid.RowSpan="3" Background="#B2FFFFFF">
                <Grid.Style>
                    <Style TargetType="{x:Type Grid}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Status.ID}"  Value="1">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status.ID}"  Value="0">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status.ID}"  Value="3">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Margin="32" Width="128"
                       gif:ImageBehavior.AnimatedSource="/resources/images/loading.gif"
                       gif:ImageBehavior.AutoStart="True"/>
                    <TextBlock Style="{DynamicResource Heading 3}" HorizontalAlignment="Center" Text="{Binding Status.Message}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
