<Window x:Class="DormitoryApp.Views.MainView" Style="{DynamicResource DefaultStyle}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DormitoryApp.Views"
        xmlns:interop="clr-namespace:Walterlv.Demo.Interop" xmlns:viewmodels="clr-namespace:DormitoryApp.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        interop:WindowBlur.IsEnabled="True" 
        
        mc:Ignorable="d"
        WindowStyle="None" AllowsTransparency="True" Background="{x:Null}"
        Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="{x:Type ListBoxItem}">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <Border Margin="0, 0, 0, 18" CornerRadius="20" BorderThickness="0" Background="{StaticResource DefaultGradient}">
                                    <Button Padding="16, 4, 65, 4" Style="{x:Null}" Foreground="{StaticResource PrimaryBrush}" Background="{x:Null}" BorderThickness="0">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="24" Source="{Binding URI}"/>
                                            <TextBlock FontSize="20" Margin="18, 0" Text="{Binding Text}"/>
                                        </StackPanel>
                                    </Button>
                                </Border>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border BorderThickness="1" BorderBrush="#7FFFFFFF">
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" Width="303" Background="{DynamicResource FrostedGlassBrush}">
                <StackPanel.Effect>
                    <DropShadowEffect BlurRadius="16" Color="#16000000" Opacity="0.09"/>
                </StackPanel.Effect>

                <TextBlock Margin="24" Style="{DynamicResource TitleText}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <ListBox ItemsSource="{Binding Buttons}" SelectedItem="{Binding SelectedButton}"
                         HorizontalContentAlignment="Right" VerticalContentAlignment="Center"
                         Background="{x:Null}" BorderBrush="{x:Null}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Button Padding="16, 4, 65, 4" Style="{x:Null}" Foreground="{StaticResource PrimaryBrush}" Background="{x:Null}" BorderThickness="0">
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="24" Source="{Binding URI}"/>
                                    <TextBlock FontSize="20" Margin="18, 0" Text="{Binding Text}"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Background="{DynamicResource GlassBrush}">
            </StackPanel>
        </DockPanel>
